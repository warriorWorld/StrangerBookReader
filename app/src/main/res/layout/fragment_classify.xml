<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/english_book_reader"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="FictionPress"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="小说"
            android:textColor="@color/english_book_reader"
            android:textSize="@dimen/main_text_size"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fiction_press_fbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_btn"
            app:dividerDrawable="@drawable/divider"
            app:flexWrap="wrap"
            app:showDivider="beginning|middle|end"></com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

</ScrollView>
